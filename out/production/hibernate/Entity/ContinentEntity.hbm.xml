<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Entity.ContinentEntity" table="CONTINENT" schema="SYSTEM">
        <id name="continent">
            <column name="CONTINENT" sql-type="varchar2(30)" length="30"/>
        </id>
        <property name="climate">
            <column name="CLIMATE" sql-type="varchar2(30)" length="30" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>